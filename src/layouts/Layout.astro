---
import "../global.css";
interface Props {
  title: string;
}

import Layout2 from "../components/layout.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="AsyncTalk Podcast - RSS Feed"
      href={`${Astro.site}rss.xml`}
    />
    <slot name="seo" />
    <script
      is:inline
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4489403687940405"
      crossorigin="anonymous"
    />
    <title>{title}</title>
  </head>
  <body>
    <Layout2>
      <slot />
    </Layout2>
  </body>
</html>
<style is:global>
  :root {
    --at-primary-color: oklch(71.33% 0.112 194.94);
    --at-primary-color-light: oklch(71.33% 0.112 194.94 / 31.65%);
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: black;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  ::selection {
    background-color: var(--at-primary-color);
    color: rgba(249, 250, 251, 1);
    -webkit-text-fill-color: rgba(249, 250, 251, 1);
  }

  .ch-codegroup {
    /* @apply shadow; */
    box-shadow: 0 0 0 1px red;
  }
</style>
