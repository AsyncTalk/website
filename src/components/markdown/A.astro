---
import IconExternalLink from "../icons/external-link.astro";

type Props = {
  href?: string;
};

const { href } = Astro.props;
const isExternalLink = href?.startsWith("http");
---

<div class="inline-flex">
  <a
    class="transition-all active:scale-95 duration-75 p-1 rounded-lg leading-none hover:bg-primary/20 no-underline inline-block"
    href={href}
    target="_blank"
    rel="noopener noreferrer"
  >
    <slot />
  </a>
  {
    isExternalLink && (
      <IconExternalLink className="scale-50 -translate-y-2 -translate-x-1 -mr-2" />
    )
  }
</div>
